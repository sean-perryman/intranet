.container.well
  .col-md-6
    %h1 Listing VM Problems
    %table.table.table-striped
      %tr
        %th User with issue
        %th Problem
        %th Resolved?
        %th{:colspan => "3"}
      
      - @vm_problems.each do |vm_problem|
        %tr
          %td= vm_problem.who_are_you
          %td= vm_problem.what_is_the_problem
          %td
            -if vm_problem.resolved
              yes
            -else
              no
          %td= link_to 'Show', vm_problem, :class => "btn btn-sm btn-default"
          %td= link_to 'Edit', edit_vm_problem_path(vm_problem), :class => "btn btn-sm btn-default"
          %td= link_to 'Destroy', vm_problem, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-sm btn-danger'